declare(strict_types=1);

use Magento\Framework\Escaper;

/** @var Escaper $escaper */
?>
<?php if (count($block->getCollection()->getItems()) > 0): ?>
    <div class="searches-results">
        <?php foreach ($block->getCollection()->getItems() as $item): ?>
            <span><?= $escaper->escapeHtml($item->getQueryText()); ?></span>
            <br/>
        <?php endforeach; ?>
    </div>
<?php else: ?>
    <div class="empty-text">
        <?= $escaper->escapeHtml(__('There are no search keywords.')); ?>
    </div>
<?php endif; ?>
